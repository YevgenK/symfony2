{% extends "::blog/page/1column.html.twig" %}

{% block body %}

    <div class="header span6">
        <h1>All records</h1>
        <span><a href="{{ url('demos_blog_create') }}" class="btn btn-primary">create new post</a></span>
    </div>

    {% for post in postCollection %}
        <div class="well span12">
            <h2>
                <a href="{{ url('demos_blog_show', {'id' : post.getId() }) }}">{{ post.getTitle() }}</a>
            </h2>
            <p>{{ post.getBody() }}</p>
            <hr/>
            <small>Post date: {{  post.getCreatedDate().format("Y-m-d H:i:s")  }}</small>
        </div>
    {% endfor %}

{% endblock %}
